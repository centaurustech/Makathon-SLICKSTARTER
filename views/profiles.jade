extends layout

block content
  h1
    each student in students
      = student.firstName + '\'s Profile'
        
  ul
    each student in students
      li
        = student.firstName + ' '
        = student.lastName
        br
        = student.university
        br
        = student.course
        br
        = student.level
        br
        = student.email
        
        ul
