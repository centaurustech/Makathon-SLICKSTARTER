extends layout

block content
  h1= title
  p The students of Slickstarter

  h2 Sign up
  form(action="/students/create", method="post")
    | First Name
    input(type="text", name="username")
    | Second Name
    input(type="text", name="lastname")
    input(type="submit")

  h2 Students

  ul
    each student in students
      li
        = student.firstName + ' '
        = student.lastName
        ul
          li
            | Creating a new project:
            form(action="/students/" + student.id + "/projects/create", method="post", style="display: inline")
              input(type="text", name="project")
              input(type="submit")
          each project in student.Projects
            li
              = project.name + ' started by ' + student.firstName
              a(href="/students" + student.id + "/projects" + project.id + "/destroy") - Delete
              br
              a(href="/students" + student.id) - View User Profile
